{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                //"FLASK_DEBUG": "1",
                //"FLASK_RUN_PORT": "5001"
            },
            "args": [
                "run",
                "--host", "127.0.0.1", // Explicitly bind to localhost
                "--port", "5001",     // Explicitly set the port here, preferred over env
                "--no-debugger",      // This means the *Werkzeug* debugger is off, VS Code's is on
                "--no-reload"         // Keep this for stable debugging
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "justMyCode": true // Optional: Set to false if you want to step into library code (e.g., MLflow, Pandas)
        }
    ]
}